<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">

            <h2 class="mt-3 mb-5">Edit the Listing</h2>
           
            <form method="post" action="/listings/<%= list._id %>?_method=PUT">



                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="title" value="<%= list.title %>" type="text" class="form-control">
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="description" class="form-control"><%= list.description %></textarea>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Image src</label>
                    <input name="image" value="<%= list.image.url %>" type="text" class="form-control">
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="price" value="<%= list.price %>" type="text" class="form-control">
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">country</label>
                        <input name="country" value="<%= list.country %>" type="text" class="form-control">
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="location" value="<%= list.location %>" type="text" class="form-control">

                </div>





                <button class="btn btn-dark edit-btn mt-3 mb-3">Save The Edit</button>
            </form>

            </div>
            </div>
</body>

